<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LogronoExamen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"/>
                
            </Frame>

            <Label>CREDENCIALES DE INGRESO</Label>

            <Entry x:Name="txtUsuario" Keyboard="Text" Placeholder="Ingrese el nombre de usuario"/>
            <Entry x:Name="txtPassword" Placeholder="Ingrese el password" IsPassword="True"/>

            <Button x:Name="btLogin" Text="Login" Clicked="btLogin_Clicked"/>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>